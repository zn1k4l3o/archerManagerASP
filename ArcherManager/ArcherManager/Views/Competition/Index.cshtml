<section class="container mt-4">
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Competition
        </a>
    </div>

    @if (ViewBag.Competitions.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark text-white">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Organiser</th>
                    <th>Details</th>
                    <th>Enter Results</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Competition competition in ViewBag.Competitions)
                {
                    <tr>
                        <td>@competition.Id</td>
                        <td>@competition.Name</td>
                        <td>@competition.Description</td>
                        <td>@competition.Organiser.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@competition.Id" class="btn btn-outline-secondary btn-sm">Details</a>
                        </td>
                        <td>
                            <a asp-action="Results" asp-route-id="@competition.Id" class="btn btn-outline-success btn-sm">Enter Results</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">There are currently no competitions in the database.</div>
    }
</section>