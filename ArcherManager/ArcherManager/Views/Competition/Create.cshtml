@model Competition

<section>
    <form asp-action="Create">
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Start of competition</label>
            <input asp-for="CompetitionStart" class="form-control" type="date" />
            <span asp-validation-for="CompetitionStart" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">End of competition</label>
            <input asp-for="CompetitionEnd" class="form-control" type="date" />
            <span asp-validation-for="CompetitionEnd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Club</label>
            <select asp-for="OrganiserId" asp-items="ViewBag.AllClubs" class="form-control"></select>
            <span asp-validation-for="OrganiserId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-outline-success" />
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}