@model List<Archer>

<section>

    <div>
        <a asp-action="Create" class="btn btn-success">New archer</a>
    </div>
    @if (Model.Count > 0)
    {
        <table>
            @foreach (var archer in @Model)
            {
                <tr>
                    <td>
                        @archer.Name
                    </td>
                    <td>
                        @archer.Surname
                    </td>
                    <td>
                        @archer.Club?.Name
                    </td>
                    <td>
                        @archer.DateOfBirth
                    </td>
                </tr>
            }
        </table>

    }
    else
    {
        <h2>There are currently no archers in database.</h2>
    }

</section>